<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.school.tictactoejoe" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launch"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ca.school.tictactoejoe.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.school.tictactoejoe.OnePlayer"
            android:label="@string/title_activity_one_player" >
        </activity>
        <activity
            android:name="ca.school.tictactoejoe.TwoPlayer"
            android:label="@string/title_activity_two_player" >
        </activity>
        <activity
            android:name="ca.school.tictactoejoe.About"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>
